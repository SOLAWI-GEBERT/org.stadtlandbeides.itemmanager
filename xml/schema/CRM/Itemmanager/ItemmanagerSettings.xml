<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Itemmanager</base>
  <class>ItemmanagerSettings</class>
  <name>civicrm_itemmanager_settings</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique ItemmanagerSettings ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>price_field_id</name>
    <title>Price Field</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to civicrm_price_field</comment>
  </field>
  <foreignKey>
    <name>price_field_id</name>
    <table>civicrm_price_field</table>
    <key>id</key>
    <add>3.3</add>
  </foreignKey>
  <field>
    <name>period_start_on</name>
    <title>Booking Period Start on</title>
    <type>datetime</type>
    <default>NULL</default>
    <comment>If non-zero, do not show this field before the date specified</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>
  <field>
    <name>periods</name>
    <type>int unsigned</type>
    <default>NULL</default>
    <comment>Number of periods at start</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>period_type</name>
    <type>int unsigned</type>
    <default>NULL</default>
    <comment>Period interval type</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>itemmanager_successor_id</name>
    <title>Successor</title>
    <type>int unsigned</type>
    <default>0</default>
    <comment>ID to itemmanager entry which is the successor</comment>
  </field>


</table>
